# Environment template for 2024 Agent Patterns
# Copy this to .env and fill in your API keys

# ===== CORE LLM PROVIDERS =====
# OpenAI (required for most examples)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here  # Optional for enterprise accounts

# Anthropic (for Claude and Computer Use)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google (for Gemini and Vertex AI)
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_CLOUD_PROJECT=your_gcp_project_id_here

# ===== FRAMEWORK-SPECIFIC KEYS =====
# LangChain & LangSmith
LANGCHAIN_API_KEY=your_langchain_api_key_here
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_PROJECT=your_project_name_here

# ===== MEMORY & STATE MANAGEMENT =====
# Mem0 (for adaptive memory)
MEM0_API_KEY=your_mem0_api_key_here
MEM0_USER_ID=default_user_123

# Redis (for caching and session state)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_here  # If using Redis Cloud

# Vector Databases
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_env_here
CHROMA_DB_PATH=./data/chroma_db

# ===== OBSERVABILITY & MONITORING =====
# LangFuse (open-source observability)
LANGFUSE_PUBLIC_KEY=your_langfuse_public_key_here
LANGFUSE_SECRET_KEY=your_langfuse_secret_key_here
LANGFUSE_HOST=https://cloud.langfuse.com  # or your self-hosted instance

# AgentOps (agent-specific monitoring)
AGENTOPS_API_KEY=your_agentops_api_key_here

# Weights & Biases (experiment tracking)
WANDB_API_KEY=your_wandb_api_key_here
WANDB_PROJECT=agent_experiments_2024

# Helicone (LLM observability)
HELICONE_API_KEY=your_helicone_api_key_here

# ===== ENTERPRISE INTEGRATIONS =====
# Microsoft (for Copilot Studio)
AZURE_OPENAI_API_KEY=your_azure_openai_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_VERSION=2024-02-15-preview

# AWS (for Bedrock)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_DEFAULT_REGION=us-east-1

# Google Cloud (for Vertex AI)
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account.json

# ===== DEVELOPMENT & TESTING =====
# Environment settings
ENVIRONMENT=development  # development, staging, production
DEBUG=true
LOG_LEVEL=INFO

# API Rate Limits
DEFAULT_RATE_LIMIT=100  # requests per minute
PREMIUM_RATE_LIMIT=1000

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# ===== OPTIONAL SERVICES =====
# Web Search
SERPER_API_KEY=your_serper_api_key_here  # Google Search API
BING_SUBSCRIPTION_KEY=your_bing_api_key_here

# Email (for email agents)
EMAIL_USERNAME=your_email@example.com
EMAIL_PASSWORD=your_app_password_here
EMAIL_IMAP_SERVER=imap.gmail.com
EMAIL_SMTP_SERVER=smtp.gmail.com

# Calendar (for calendar agents)
GOOGLE_CALENDAR_CREDENTIALS=path/to/calendar_credentials.json

# Database connections
DATABASE_URL=postgresql://user:password@localhost/agentdb
MONGODB_URI=mongodb://localhost:27017/agentdb

# ===== COMPUTER USE SETTINGS =====
# Screen capture settings
SCREEN_CAPTURE_ENABLED=true
SCREEN_CAPTURE_QUALITY=medium  # low, medium, high
SCREEN_CAPTURE_INTERVAL=1000  # milliseconds

# Safety constraints
COMPUTER_USE_SAFE_MODE=true
ALLOWED_APPLICATIONS=browser,notepad,calculator
BLOCKED_APPLICATIONS=terminal,system_preferences

# ===== DEPLOYMENT SETTINGS =====
# Docker
DOCKER_REGISTRY=your-registry.com
DOCKER_TAG=latest

# Kubernetes
KUBE_NAMESPACE=agent-service
KUBE_CONFIG_PATH=~/.kube/config

# Load balancing
LOAD_BALANCER_ENABLED=true
MAX_CONCURRENT_REQUESTS=100

# Health checks
HEALTH_CHECK_INTERVAL=30  # seconds
HEALTH_CHECK_TIMEOUT=10   # seconds

# ===== EXAMPLE USAGE =====
# Uncomment and customize these for specific examples

# Personal Assistant settings
# ASSISTANT_NAME=Your AI Assistant
# DEFAULT_TIMEZONE=America/New_York
# CALENDAR_INTEGRATION=true
# EMAIL_INTEGRATION=false

# Research Agent settings
# RESEARCH_DATABASE=semantic_scholar
# MAX_PAPERS_PER_QUERY=20
# CITATION_STYLE=apa

# Coding Agent settings
# CODE_REVIEW_ENABLED=true
# SUPPORTED_LANGUAGES=python,javascript,typescript
# AUTO_FORMAT=true

# Multi-Agent settings
# MAX_AGENTS=10
# COORDINATION_STRATEGY=hierarchical
# SHARED_MEMORY_SIZE=1GB